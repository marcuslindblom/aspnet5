<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300,700,900' rel='stylesheet' type='text/css'>
    @*<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>*@
    <style type="text/css">
        body {
            font-family: 'Lato', sans-serif;
            font-weight: 400;
            line-height: 150%;
        }

        html {
            height: 100%;
            overflow: hidden;
            box-sizing: border-box;
            -webkit-font-smoothing: antialiased;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        body {
            height: 100%;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .brics-viewport {
            flex-grow: 1;
            display: flex;
        }

        main {
            flex-grow: 1;
            display: flex;
        }

        aside {
            background: #ddd;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            width: 350px;
        }

        .main-header {
            flex-shrink: 0;
            display: flex;
            height: 65px;
            padding: 0 20px;
            align-items: center;
            border-bottom: #dfe1e3 1px solid;
            justify-content: space-between;
        }

        .brics-view {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .entry-markdown {
            display: flex;
            flex-direction: column;
            width: 50%;
            flex-grow: 1;
        }

        .entry-preview {
            display: flex;
            flex-direction: column;
            width: 50%;
            border-left: #dfe1e3 1px solid;
        }

        .view-actions {
            flex-shrink: 0;
            display: flex;
        }

        .view-title {
            flex-grow: 1;
            display: flex;
            align-items: center;
            overflow: hidden;
            margin: 0;
            padding: 0;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-size: 2rem;
            line-height: 1.2em;
            font-weight: 400;
        }

        .settings-view {
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            width: 350px;
            border-left: #dfe1e3 1px solid;
            z-index: 1000000;
            background-color: #fff;
            transition: transform .4s cubic-bezier(0.1, .7, .1, 1);
            transform: translate3d(350px, 0, 0);
        }

        .settings-view input,
        .settings-view select {
            padding: 8px 10px;
            width: 100%;
            border: 1px solid #dfe1e3;
            border-radius: 4px;
            color: #666;
            transition: border-color .15s linear;
            /*-webkit-appearance: none;*/
            font-family: "Lato";
            font-weight: 400;

        }

        input:focus,
        select:focus {
            outline: 0;
            border-color: #b1b1b1;
        }

        .settings-view.open {
            transform: translate3d(0,0,0);
        }

        .settings-view > div {
            padding: 24px;
        }

        .auto-nav .brics-main {
            margin-left: 15px;
        }

        .brics-nav {
            /*border-right: #dfe1e3 1px solid;*/
            /*background: #f5f7f8;*/
            border-right: #cdd7de 1px solid;
            background-color: #f5f8fa;
            flex: 0 0 235px;
            flex-direction: column;
            display: flex;
        }

        .auto-nav .brics-nav {
            position: absolute;
            top: 0;
            left: 80px;
            z-index: 1000;
            width: 235px;
            height: 100%;
            transition: transform .2s;
            transform: translate3d(-220px,0,0);
            z-index: 10;
        }

        .brics-nav.open {
            transform: translate3d(0,0,0);
        }

        .view-title input {
            margin: 0;
            padding: 0;
            width: 100%;
            border: 0;
            background: 0 0;
            color: #242628;
            letter-spacing: -1px;
            font-size: 26px;
            font-weight: 700;
            outline: none;
            font-family: 'Lato', sans-serif;
            letter-spacing: -1px;
        }

        .view-editor {
            display: flex;
            flex-grow: 1;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .brics-nav-footer {
            flex-shrink: 0;
            display: flex;
            align-items: center;
            height: 40px;
            border-top: #dfe1e3 1px solid;
            margin-left: 10px;
        }

        .nav-body {
            flex-grow: 1;
        }


        /* Preview */

        .preview nav {
            display: none;
        }

        .preview .entry-markdown {
            display: none;
        }

        .preview .entry-preview {
            width: 100%;
        }

        #error1 {
          display: none;
          color: #555;
          border-radius: 5px;
          font-family: Tahoma, Geneva, Arial, sans-serif;
          font-size: .8em;
          padding: 5px 5px 5px 30px;
          margin: 5px 5px 5px 0;
          width: 7em;
          background: #ffecec url('http://www.html5accessibility.com/images/cross.png') no-repeat 10px 50%;
          border: 2px solid #f5aca6;
        }



    </style>
</head>
<body>
<div class="brics-viewport" data-module="page">
    <nav style="flex: 0 0 80px; text-align: center; background-color: #10315C; padding-top: 20px; z-index: 20;">
        <img src="https://pbs.twimg.com/profile_images/477315143660208128/oxtRtohB.jpeg" width="50" height="50"/>
    </nav>
    @RenderBody()
</div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/t3js/dist/t3.js"></script>
    <script src="~/lib/speakingurl/lib/speakingurl.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/services/router.js" asp-append-version="true"></script>
    <script src="~/js/services/settings.js" asp-append-version="true"></script>
    <script src="~/js/services/nav.js" asp-append-version="true"></script>
    <script src="~/js/modules/page.js" asp-append-version="true"></script>
    <script src="~/js/modules/iframe.js" asp-append-version="true"></script>
    <script src="~/js/modules/settings.js" asp-append-version="true"></script>
    <script src="~/js/modules/actions.js" asp-append-version="true"></script>
    <script src="~/js/modules/nav.js" asp-append-version="true"></script>
    <script src="~/js/modules/widget.js" asp-append-version="true"></script>
    <script src="~/js/modules/settings-name.js" asp-append-version="true"></script>
    <script src="~/js/modules/settings-date.js" asp-append-version="true"></script>
    <script src="~/js/modules/settings-url.js" asp-append-version="true"></script>

<script>
    Application.init({
        debug: true
    });
</script>

<template class="widget-template">
    <style>
        :host {
            cursor: pointer;
            outline: solid 1px #ddd;
        }
        :host(:hover) {
            transition: outline-color .3s ease-in;
            outline: solid 1px #00bfff;
        }
    </style>
    <content/>
</template>

</body>
</html>
