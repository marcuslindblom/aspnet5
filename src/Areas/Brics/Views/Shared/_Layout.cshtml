<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    @*<link href='https://fonts.googleapis.com/css?family=Lato:400,300,700,900' rel='stylesheet' type='text/css'>*@
    @*<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>*@
    <style type="text/css">
        body {
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            line-height: 150%;
            font-size: 14px;
            color: #999;
        }

        html {
            height: 100%;
            overflow: hidden;
            box-sizing: border-box;
            text-shadow: 1px 1px 1px rgba(0,0,0,0.004);
            text-rendering: optimizeLegibility !important;
            -webkit-font-smoothing: antialiased !important;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        a {
            color: #999;
            text-decoration: none;
            text-transform: uppercase;
        }

        body {
            height: 100%;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .brics-viewport {
            flex-grow: 1;
            display: flex;
        }

        main {
            flex-grow: 1;
            display: flex;
        }

        aside {
            background: #ddd;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            width: 350px;
        }

        .main-header {
            flex-shrink: 0;
            display: flex;
            height: 65px;
            padding: 0 20px;
            align-items: center;
            border-bottom: #474747 1px solid;
            justify-content: space-between;
            background-color: #474747
        }

        .brics-view {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .entry-markdown {
            display: flex;
            flex-direction: column;
            width: 50%;
            flex-grow: 1;
        }

        .entry-preview {
            display: flex;
            flex-direction: column;
            /*width: 50%;*/
            width: 100%;
            border-left: #474747 1px solid;
        }

        .view-actions {
            flex-shrink: 0;
            display: flex;
        }

        .view-title {
            flex-grow: 1;
            display: flex;
            align-items: center;
            overflow: hidden;
            margin: 0;
            padding: 0;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-size: 2rem;
            line-height: 1.2em;
            font-weight: 400;
        }

        .settings-view {
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            width: 350px;
            border-left: #474747 1px solid;
            z-index: 1000000;
            background-color: #212121;
            transition: transform .4s cubic-bezier(0.1, .7, .1, 1);
            transform: translate3d(350px, 0, 0);
        }

        .settings-view input,
        .settings-view select,
        .settings-view textarea {
            padding: 8px 10px;
            width: 100%;
            border: 1px solid #373737;
            border-radius: 4px;
            color: #999;
            transition: border-color .15s linear;
            /*-webkit-appearance: none;*/
            background-color: #313131;
            font-family: "Montserrat";
            font-weight: 400;

        }

        .settings-view textarea {
            width: 300px;
            height:200px;
        }

        input:focus,
        select:focus {
            outline: 0;
            border-color: #474747;
        }

        .settings-view.open {
            transform: translate3d(0,0,0);
        }

        .settings-view > div {
            padding: 24px;
            padding-top: 0;
        }

        .auto-nav .brics-main {
            margin-left: 15px;
        }

        .brics-nav {
            /*border-right: #dfe1e3 1px solid;*/
            /*background: #f5f7f8;*/
            /*border-right: #474747 1px solid;*/
            background-color: #373737;
            flex: 0 0 235px;
            flex-direction: column;
            display: flex;
        }

        .brics-nav ul {
            list-style-type: none;
            padding: 0;
        }

        .brics-nav a {
            display: block;
            padding: 5px 15px;
        }


        .auto-nav .brics-nav {
            position: absolute;
            top: 0;
            left: 80px;
            z-index: 1000;
            width: 235px;
            height: 100%;
            transition: transform .2s;
            transform: translate3d(-220px,0,0);
            z-index: 10;
        }

        .brics-nav.open {
            transform: translate3d(0,0,0);
        }

        .view-title input {
            margin: 0;
            padding: 0;
            width: 100%;
            border: 0;
            background: 0 0;
            color: #242628;
            letter-spacing: -1px;
            font-size: 26px;
            font-weight: 700;
            outline: none;
            font-family: 'Montserrat', sans-serif;
            letter-spacing: -1px;
        }

        .view-editor {
            display: flex;
            flex-grow: 1;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .brics-nav-footer {
            flex-shrink: 0;
            display: flex;
            align-items: center;
            height: 40px;
            border-top: #474747 1px solid;
            margin-left: 10px;
        }

        .nav-body {
            flex-grow: 1;
        }


        /* Preview */

        .preview nav {
            display: none;
        }

        .preview .entry-markdown {
            display: none;
        }

        .preview .entry-preview {
            width: 100%;
        }

        .sticky .settings-view {
            display: flex;
            width: 50%;
            position: static;
        }

        .sticky .entry-preview {
            width: 50%;
        }

    </style>
</head>
<body>
    <div class="brics-viewport" data-module="page">
        <nav style="flex: 0 0 80px; text-align: center; background-color: #212121; padding-top: 20px; z-index: 20;">
            <img src="https://pbs.twimg.com/profile_images/477315143660208128/oxtRtohB.jpeg" width="50" height="50"/>
        </nav>
        @RenderBody()
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/t3js/dist/t3.js"></script>
        <script src="~/lib/speakingurl/lib/speakingurl.js"></script>
        <script src="~/js/app.js" asp-append-version="true"></script>
        <script src="~/js/services/router.js" asp-append-version="true"></script>
        <script src="~/js/services/settings.js" asp-append-version="true"></script>
        <script src="~/js/services/nav.js" asp-append-version="true"></script>
        <script src="~/js/modules/page.js" asp-append-version="true"></script>
        <script src="~/js/modules/iframe.js" asp-append-version="true"></script>
        <script src="~/js/modules/settings.js" asp-append-version="true"></script>
        <script src="~/js/modules/actions.js" asp-append-version="true"></script>
        <script src="~/js/modules/nav.js" asp-append-version="true"></script>
        <script src="~/js/modules/widget.js" asp-append-version="true"></script>
        <script src="~/js/modules/editor.js" asp-append-version="true"></script>
        <script src="~/js/modules/settings-name.js" asp-append-version="true"></script>
        <script src="~/js/modules/settings-date.js" asp-append-version="true"></script>
        <script src="~/js/modules/settings-url.js" asp-append-version="true"></script>
        
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/t3js/2.0.2/t3-jquery.min.js"
                asp-fallback-src="~/lib/t3js/dist/t3.js">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/speakingurl/8.0.2/speakingurl.min.js"
                asp-fallback-src="~/lib/speakingurl/lib/speakingurl.js">
        </script>

        <script src="~/js/app.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        Application.init({
            debug: true
        });
    </script>

<template class="widget-template">
    <style>
        :host {
            cursor: pointer;
            outline: dashed 1px #ddd;
            min-height:25px;
        }
        :host(:hover) {
            transition: outline-color .3s ease-in;
            outline: dashed 1px #00bfff;
        }
    </style>
    <content />
</template>

</body>
</html>
