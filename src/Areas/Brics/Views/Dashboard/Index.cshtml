@model src.Page


<nav class="brics-nav" data-module="nav">
    <header class="brics-nav-header">
        Brics
    </header>
    <section class="nav-body">
        <ul>
            <li>
                <a href="/editor/1">Edit</a>
            </li>
            <li>
                <a href="/brics/editor/">Foo</a>
            </li>
        </ul>
    </section>
    <footer class="brics-nav-footer">
        <button data-type="btn-toggle">[</button>
    </footer>
</nav>

<main class="brics-main">
    <section class="brics-view">
        <header class="main-header">
            <h2 class="view-title">
                <input type="text" value="Render ContentArea items with, ehm... spacing" />
            </h2>
            <section class="view-actions" data-module="actions">
                <button data-type="btn-open">Settings</button>
            </section>
        </header>
        <section class="view-editor">
            <section class="entry-markdown">
                # markdown
            </section>
            <section class="entry-preview">
                Preview
            </section>
        </section>
    </section>
</main>

<aside class="settings-view" data-module="settings">
    <div class="settings-view-header">
        <h4>Settings</h4>
        <button data-type="btn-close">x</button>
        <div>
            <div>
                <label>Name</label>
            </div>
            <div>
                <input type="text" value="" />
            </div>
        </div>
        <div>
            <div>
                <label>URL</label> <a href="#">Preview</a>
            </div>
            <div>
                <input type="text" />
            </div>
            <span>www.brickpile.io/foo/bar</span>
        </div>
        <div>
            <div>
                <label>Publish Date</label>
            </div>
            <div>
                <input type="datetime" value="08 Jan 16 @@ 12:00" />
            </div>
            <small>Published Date must be a valid date with format: DD MMM YY @@ HH:mm (e.g. 6 Dec 14 @@ 15:00)</small>
        </div>
        <div>
            <div>
                <label>Tags</label>
            </div>
            <div>
                <input type="text" />
            </div>
        </div>
        <div>
            <div>
                <label>Author</label>
            </div>
            <div>
                <input type="text" />
            </div>
        </div>
        <div>
            <div>
                <label>Access Control</label>
            </div>
            <div>
                <select>
                    <option>Everyone</option>
                    <option>Authenticated</option>
                    <option>Administrator</option>
                </select>
            </div>
        </div>
        <br />
        <div>
            <a href="#" style="border: solid 1px #dfe1e3; padding: 1em; display: block">
                Meta Data<br />
                <small>Extra content for SEO and social media.</small>
            </a>
        </div>
    </div>
</aside>
